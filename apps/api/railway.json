{
  "$schema": "https://railway.app/railway.schema.json",
  "$service": {
    "source": {
      "repo": "Krugo-D/pixeltrace",
      "rootDir": "."
    }
  },
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "yarn workspace api start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

